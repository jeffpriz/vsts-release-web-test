{
    "manifestVersion": 1,
    "id": "release-web-smoke-test-task",
    "name": "Release Web Smoke Test",
    "version": "1.0.10",
    "publisher": "OneLuckiDev",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "images/icon-small.png"
    },
    "description": "Task for performing a smoke test on a released web application to validate that it is available at the end of a release.  This task will accept multiple web URLs, and a retry count.",
    "categories": [
        "Build and release"
    ],
    "files": [
        {
            "path": "ReleaseWebTest"
        },
        {
            "path": "images/icon-small.png",
            "addressable": true
        },
        {
            "path": "images/input.PNG",
            "addressable": true
        },
        {
            "path": "images/task.png",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "vsts-release-web-test",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ReleaseWebTest"
            }
        }
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/jeffpriz/vsts-release-web-test"
    },
    "public": true
}
